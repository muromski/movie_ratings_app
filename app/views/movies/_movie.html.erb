<div id="<%= dom_id movie %>">
  <div class="card mt-4">
    <%= image_tag movie.image_url, size: "300x450", class: "card-img-top", alt: movie.title %>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <h5 class="card-title text-muted mb-3"><%= "#{movie.title} (#{movie.release_year})" %></h5>
        </div>
        <div class="col-md-6 text-md-end">
          <div class="ratings-container">
            <%= render 'movie_rating', movie: movie %>
          </div>
        </div>
      </div>
      <div class="card-text">Director: <%= movie.director %></div>
      <div class="card-text">Genre: <%= movie.genre %></div>
      <hr class="my-3">
      <p class="card-text"><%= movie.description %></p>
    </div>
  </div>
</div>
